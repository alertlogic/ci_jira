<html>
    <head>
        <title>$i18n.getText('ci.partials.snooze.incident.vm.title')</title>
        <meta name="decorator" content="atl.general">
    </head>
    <body class="page-type-admin">
        <script>
            /**
             * This Controller is embeded as a modal, needs
             * to be loaded explictly here to make it work.
             * TODO: This should be load using webresources or use
             * a very special context.
             */
            snoozeIncidentController();
        </script>

        <div class="content-container">
            <div class="content-body">

               <header class="aui-page-header">
                    <div class="aui-page-header-inner">
                        <div class="aui-page-header-main">
                            <h1>$i18n.getText('ci.partials.snooze.incident.vm.title')</h1>
                        </div>
                    </div>
                </header>
                <div id="snoozeMsg">
                </div>
                <form class="aui" id="snoozeIncidentForm">

                    <input type="hidden"  id="jiraIssueId" name="jiraIssueId" value="$jiraIssueId">

                    <div class="field-group">
                        <label for="select-until"> $i18n.getText('ci.partials.snooze.incident.vm.until.label') </label>
                        <select class="select" id="snoozeUntil" name="snoozeUntil">
                         </select>
                    </div>

                    <div class="field-group">
                        <label for="textarea-id"> $i18n.getText('ci.partials.snooze.incident.vm.comment.label') </label>
                        <textarea class="textarea" name="comment" id="snoozeComment" placeholder="$i18n.getText('ci.partials.snooze.incident.vm.comment.placeholder')"></textarea>
                    </div>

                </form>
                <div class="button-align-right">
                    <button class="aui-button aui-button-primary" type="button" id="snoozeIncidentButton"> $i18n.getText('ci.partials.snooze.incident.vm.button.snooze') </button>
                    <button class="aui-button" type="button" id="snoozeIncidentCancelButton"> $i18n.getText('ci.partials.snooze.incident.vm.button.cancel') </button>
                </div>
            </div>
        </div>
    </body>
</html>