                <div class="aui-item">
    		      <h1>$i18n.getText('ci.partials.ruleconfiguration.vm.title')</h1>
                </div>
                <div class="aui-item button-align-right">
                    <button id="unblock-rule-button" class="aui-button aui-button-primary">
                        $i18n.getText('ci.partials.ruleconfiguration.vm.button.unblock')
                    </button>
                    <button id="delete-rule-button" class="aui-button aui-button-primary">
                        $i18n.getText('ci.partials.ruleconfiguration.vm.button.delete')
