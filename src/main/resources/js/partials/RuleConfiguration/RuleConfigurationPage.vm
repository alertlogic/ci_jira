                        </thead>
                        <tbody></tbody>
                    </table>
                    
                    <div id="ruleConfigurationLoading" class="text-align-center">
                        $i18n.getText('ci.partials.generic.vm.loading')
                    </div>
                      
                    <div id="ruleZeroState" class="zero-state">
                        $i18n.getText('ci.partials.ruleconfiguration.js.msg.rule.zero')
