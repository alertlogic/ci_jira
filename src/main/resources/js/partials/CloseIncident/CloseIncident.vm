<html>
    <head>
        <title>$i18n.getText('ci.partials.close.incident.vm.title')</title>
        <meta name="decorator" content="atl.general">
    </head>
    <body class="page-type-admin">
        <script>
            /**
             * This Controller is embeded as a modal, needs
             * to be loaded explictly here to make it work.
             * TODO: This should be load using webresources or use
             * a very special context.
             */
            closeIncidentController();
        </script>

        <div class="content-container">
            <div class="content-body">

               <header class="aui-page-header">
                    <div class="aui-page-header-inner">
                        <div class="aui-page-header-main">
                            <h1>$i18n.getText('ci.partials.close.incident.vm.title')</h1>
                        </div>
                    </div>
                </header>
                <div id="closeMsg">
                </div>

                <div id="textToClose">
                    $i18n.getText('ci.partials.close.incident.js.panel.text.close')
                </div>

                <br>

                <form class="aui" id="closeIncidentForm">

                    <input type="hidden"  id="jiraIssueId" name="jiraIssueId" value="$jiraIssueId">

                    <fieldset id="closeReasonGroup" class="group" >
                        <legend><span>$i18n.getText('ci.partials.close.incident.vm.reason.label')</span></legend>

                        <small>$i18n.getText('ci.partials.close.incident.vm.reason.valid.label')</small>
                        <div class="radio">
                            <input class="radio" type="radio" checked="checked"
                                name="closeReason" id="further_action" value="further_action">
                            <label for="further_action">$i18n.getText('ci.partials.close.incident.vm.reason.further_action')</label>
                        </div>
                        <div class="radio">
                            <input class="radio" type="radio"
                                name="closeReason" id="acceptable_risk" value="acceptable_risk">
                            <label for="acceptable_risk">$i18n.getText('ci.partials.close.incident.vm.reason.acceptable_risk')</label>
                        </div>
                        <br>
                        <small>$i18n.getText('ci.partials.close.incident.vm.reason.invalid.label')</small>
                        <div class="radio">
                            <input class="radio" type="radio"
                                name="closeReason" id="compensating_control" value="compensating_control">
                            <label for="compensating_control">$i18n.getText('ci.partials.close.incident.vm.reason.compensating_control')</label>
                        </div>
                        <div class="radio">
                            <input class="radio" type="radio" checked="checked"
                                name="closeReason" id="threat_not_valid" value="threat_not_valid">
                            <label for="threat_not_valid">$i18n.getText('ci.partials.close.incident.vm.reason.threat_not_valid')</label>
                        </div>
                        <div class="radio">
                            <input class="radio" type="radio"
                                name="closeReason" id="other" value="other">
                            <label for="other">$i18n.getText('ci.partials.close.incident.vm.reason.other')</label>
                        </div>
                    </fieldset>

                    <div class="field-group">
                        <label for="textarea-id"> $i18n.getText('ci.partials.close.incident.vm.comment.label') </label>
                        <textarea class="textarea" name="comment" id="closeComment" placeholder="$i18n.getText('ci.partials.close.incident.vm.comment.placeholder')"></textarea>
                    </div>
                </form>
                <div class="button-align-right">
                    <button class="aui-button aui-button-primary" type="button" id="closeIncidentButton"> $i18n.getText('ci.partials.close.incident.vm.button.close') </button>
                    <button class="aui-button" type="button" id="closeIncidentCancelButton"> $i18n.getText('ci.partials.close.incident.vm.button.cancel') </button>
                </div>
            </div>
        </div>
    </body>
</html>